<div class="flex-container">
  <div class="flex-item">
    <div class="venueInfoSection">
      <div class="venueInfo">
        <img src="https://lh3.googleusercontent.com/-LvroGvBAXVA/WWPkQxrzvCI/AAAAAAABhv0/vpiQYmET1c8G9Loh9MFMid19kPUEFHF4gCLIBGAYYCw/w180-h180-n-k-no/" class="img-rounded">
        <span class="label venueScore">{{model.allVenues.rating}}</span>
        <div class="restaurantDetails">
          <span class="label venueCost">{{model.allVenues.price.currency}}</span>
          <h3 class="restaurantName">{{model.allVenues.name}}</h3>
          <p class="restaurantDescription">{{model.location.address}}{{model.allVenues.location.country}}</p>
          <p>{{model.url}}</p>
        </div>
      </div>
      <div class="venueActionSection">
        <span class="label tipsbtn">Tips and Reviews</span>
        <!-- <button class="tipsbtn" tipsbtntype="button" name="button"></button> -->
        <button class="eventsbtn" type="button" name="button">{{#link-to 'google-calendar' component}}Create Event{{/link-to}}</button>
        <!-- <div class="venueRateSection">
          <span class="venueUpvote"><i class="fa fa-heart-o fa-2x fa-fw" aria-hidden="true"></i>Upvote</span>
          <span class="venueDownvote"><i class="fa fa-thumbs-down fa-2x fa-fw" aria-hidden="true"></i>Downvote</span>
        </div> -->
      </div>
      <!-- <div class="venueReviews">
        <ul class="nav nav-tabs">
          <li class="active"><a href="#">All Reviews</a></li>
        </ul>
      </div> -->
      <div class="reviewSection">
        {{#each model.allReviews as |review|}}
          {{review-details review=review}}
        {{/each}}
      </div>
      <div class="showEvent">

      </div>
    </div>
  </div>
</div>
